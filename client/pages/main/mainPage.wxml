<!--pages/main/mainPage.wxml-->

<view class='page'> 



<view class="label_bg">
        <image style="width: {{m_bgWidth}}rpx; height: {{m_bgHeight}}rpx; background-color: #eeeeee;" mode="aspectFit" src="{{bg_img}}"></image>
</view>

<image class='finger' animation = "{{animationData}}" hidden="{{m_finger_hidden}}" style="width: {{m_circleWidth}}rpx; height: {{m_circleHeight}}rpx ;top:{{m_circlePosY}}rpx ;left:{{m_circlePosX}}rpx;" mode="scaleToFill" src="../res/icon/circle.png" bindtap="btn_clickFinger"></image>

<view class='btns'  style="width: 750rpx; height: 90rpx;background-color: #eeeeee;">

  <button style="" type="primary"  bindtap="btn_last"> 上一步 </button>

  <button style="" type="warn"   bindtap="btn_exp"> 解说步骤 </button>

  <button style="" type="primary"  bindtap="btn_next"> 下一步 </button>

</view>



</view>

